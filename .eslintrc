{
	"extends": [
		"airbnb",
		"prettier",
		"prettier/react"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 8,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"experimentalDecorators": true,
			"jsx": true,
			"impliedStrict": true,
			"classes": true
		}
	},
	"plugins": [
		"prettier",
		"json"
	],
	"globals": {
		"children": true
	},
	"env": {
		"browser": true,
		"node": true
	},
	"settings": {
		"import/core-modules": [
			"react"
		],
		"import/no-unresolved": 2
	},
	"rules": {
		"import/no-extraneous-dependencies": 0,
		"import/prefer-default-export": 0,
		"jsx-a11y/anchor-is-valid": ["warn", {
			"aspects": [
				"invalidHref"
			]
		}],
		"linebreak-style": ["error", "unix"],
		"no-bitwise": ["error", {
			"allow": ["~"]
		}],
		"no-console": "off",
		"no-param-reassign": [
      2,
      {
        "props": false
      }
		],
		"no-shadow": [2, {
			"hoist": "all",
			"allow": [
				"resolve",
				"reject",
				"done",
				"next",
				"err",
				"error"
			]
		}],
		"no-plusplus": 0,
		"no-unused-expressions": 0,
		"no-unused-vars": [
			1,
			{
				"argsIgnorePattern": "res|next|^err"
			}
		],
		"no-restricted-syntax": [0, "ForOfStatement"],
		"no-underscore-dangle": [2, {
			"allow": [
				"_id",
				"__typename"
			]
		}],
		"no-use-before-define": ["error", {
			"classes": true,
			"functions": false,
			"variables": true 
		}],
		"react/destructuring-assignment": 0,
		"react/forbid-prop-types": 0,
		"react/jsx-filename-extension": [1, {
			"extensions": [".js", ".jsx"]
		}],
		"react/no-array-index-key": 0,
		"react/no-danger": 0,
		"react/no-unescaped-entities": 0,
		"react/prefer-stateless-function": 0,
		"react/prop-types": [0, {
			"ignore": [
				"location",
				"children"
			]
		}],
		"radix": ["error", "as-needed"],
		"semi": ["error", "always"],
		"quotes": [2, "single", {
			"avoidEscape": true,
			"allowTemplateLiterals": true
		}],
		"prettier/prettier": ["error", {
			"trailingComma": "es5",
			"semi": true,
			"singleQuote": true,
			"bracketSpacing": true,
			"printWidth": 90,
			"tabWidth": 2,
			"useTabs": false
		}],
	}
}
